            android:textSize="26dp"
            android:hint="Paco"/>

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:orientation="horizontal">

            <!-- Primer LinearLayout (Alineado a la izquierda) -->
